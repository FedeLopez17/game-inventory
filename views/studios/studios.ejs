<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="/scripts/script.js" defer></script>
    <link rel="stylesheet" href="/styles/style.css">
    <title>Studios</title>
  </head>
  <body>
    <%- include("../partials/header", { activeEntity: "studios", addButtonText: "Add Studio"  }) %>

    <h1>Studios:</h1>
    <ul>
      <% studios.forEach(studio => { %>
      <li>
        <%= studio.name %>
        <button type="button" onClick="deleteEntity('studio', <%= studio.id %>, '/studios/delete', '/studios')">
          Delete
        </button>
      </li>
      <% }) %>
    </ul>
  </body>
</html>
